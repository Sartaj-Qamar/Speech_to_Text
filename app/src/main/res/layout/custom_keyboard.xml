<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:padding="@dimen/_16sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/noto_sami_bold"
            android:gravity="center"
            android:text="abc"
            android:textSize="@dimen/_14ssp" />

        <ImageView
            android:id="@+id/my_image_view"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="Draw Icon"
            android:src="@drawable/ic_draw" />

    </LinearLayout>


    <View
        android:id="@+id/drawing_area"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/redo_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/redo_button_bg1"
            android:contentDescription="Clear Drawing"
            android:src="@drawable/ic_redo" />

        <ImageButton
            android:id="@+id/space_button"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/redo_button_bg1"
            android:contentDescription="Save Drawing"
            android:src="@drawable/ic_space" />

        <ImageButton
            android:id="@+id/brush_color_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/redo_button_bg1"
            android:contentDescription="Change Brush Color"
            android:src="@drawable/ic_cross" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/next_button_bg1"
            android:contentDescription="Change Brush Size"
            android:src="@drawable/ic_next" />
    </LinearLayout>
</LinearLayout>
