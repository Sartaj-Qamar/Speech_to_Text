<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_16sdp"
    tools:context=".Fragments.TextToTranslateDrawFragment">

    <TextView
        android:id="@+id/edit_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sami_bold"
        android:gravity="start"
        android:maxLines="8"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingStart="@dimen/_10sdp"
        android:text="@string/draw_text"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/suggestion_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/d_white"
        android:fontFamily="@font/noto_sami_bold"
        android:gravity="center"
        android:paddingVertical="@dimen/_5sdp"
        android:text="@string/draw_suggestion"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toTopOf="@id/frameLayout"
        app:layout_constraintEnd_toStartOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.92" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:background="@color/d_white"
        android:src="@drawable/ic_draw"
        app:layout_constraintBottom_toBottomOf="@id/suggestion_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/suggestion_text_view"
        app:layout_constraintTop_toTopOf="@id/suggestion_text_view" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/white"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.codetech.speechtotext.Utils.DrawView
            android:id="@+id/drawing_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/redo_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/redo_button_bg1"
            android:contentDescription="Clear Drawing"
            android:src="@drawable/ic_redo" />

        <ImageButton
            android:id="@+id/space_button"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/redo_button_bg1"
            android:contentDescription="Save Drawing"
            android:src="@drawable/ic_space" />

        <ImageButton
            android:id="@+id/brush_color_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/redo_button_bg1"
            android:contentDescription="Change Brush Color"
            android:src="@drawable/ic_cross" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/next_button_bg1"
            android:contentDescription="Change Brush Size"
            android:src="@drawable/ic_next" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
