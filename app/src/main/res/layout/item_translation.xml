<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/view"
    android:background="@drawable/edit_layout_bg"
    android:orientation="vertical"
    android:padding="16dp">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cross"
        android:layout_gravity="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sourceLangText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:text="@string/english"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inputText"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:gravity="start"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/input_text"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/volume"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:src="@drawable/ic_volume"
            app:tint="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:background="#CECECE" />

    <TextView
        android:id="@+id/targetLangText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:text="@string/urdu"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:gravity="start"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/translated_text"
            android:textColor="@color/bg_primary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/volume2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:src="@drawable/ic_volume"
            app:tint="@color/bg_primary" />
    </LinearLayout>



<!--    <TextView
        android:id="@+id/resultText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:fontFamily="@font/noto_medium"
        android:text="Translated Text"
        android:textColor="@color/bg_primary"
        android:textSize="18sp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginVertical="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favoriteText"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:src="@drawable/ic_unfav"
             />

        <ImageView
            android:id="@+id/copyText"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:src="@drawable/copy_icon"
            app:tint="#CECECE" />

        <ImageView
            android:id="@+id/deleteText"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:src="@drawable/delete_icon"
            app:tint="#CECECE" />
    </LinearLayout>
</LinearLayout>
