<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.OCRFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.codetech.speechtotext.Utils.TranslationOverlay
            android:id="@+id/translationOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/languageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/languageSelection1"
            android:layout_width="@dimen/country_language_width"
            android:layout_height="@dimen/country_language_height"
            android:layout_marginVertical="@dimen/margin_medium"
            android:background="@drawable/edit_button_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_medium"
                android:ellipsize="end"
                android:fontFamily="@font/noto_sami_bold"
                android:maxLines="1"
                android:text="@string/english"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/downArrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/downArrow"
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_marginEnd="@dimen/margin_small"
                android:src="@drawable/icon_pop_up"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iconNext"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:src="@drawable/rotate_icon"
            app:layout_constraintBottom_toBottomOf="@id/languageSelection1"
            app:layout_constraintEnd_toStartOf="@id/languageSelection2"
            app:layout_constraintStart_toEndOf="@id/languageSelection1"
            app:layout_constraintTop_toTopOf="@id/languageSelection1"
            app:tint="@color/white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/languageSelection2"
            android:layout_width="@dimen/country_language_width"
            android:layout_height="@dimen/country_language_height"
            android:background="@drawable/edit_button_bg"
            app:layout_constraintBottom_toBottomOf="@id/iconNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iconNext">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_medium"
                android:ellipsize="end"
                android:fontFamily="@font/noto_sami_bold"
                android:maxLines="1"
                android:text="@string/china"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/downArrow2"
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_marginEnd="@dimen/margin_small"
                android:src="@drawable/icon_pop_up"
                app:layout_constraintBottom_toBottomOf="@id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textView2"
                app:tint="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/picGallery"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:src="@drawable/icon_gallery"
        app:layout_constraintBottom_toTopOf="@id/gallery_text"
        app:layout_constraintStart_toStartOf="@id/languageLayout" />

    <TextView
        android:id="@+id/gallery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="@string/gallery"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/picGallery"
        app:layout_constraintStart_toStartOf="@id/picGallery" />

    <ImageView
        android:id="@+id/takeImage"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/take_image_bg"
        app:layout_constraintBottom_toBottomOf="@id/picGallery"
        app:layout_constraintEnd_toEndOf="@id/languageLayout"
        app:layout_constraintStart_toStartOf="@id/languageLayout"
        app:layout_constraintTop_toTopOf="@id/picGallery" />

    <ImageView
        android:id="@+id/torch"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:src="@drawable/ic_flash_off"
        app:layout_constraintBottom_toBottomOf="@id/takeImage"
        app:layout_constraintEnd_toEndOf="@id/languageLayout"
        app:layout_constraintTop_toTopOf="@id/takeImage" />

    <TextView
        android:id="@+id/flash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="@string/flash_off"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/torch"
        app:layout_constraintStart_toStartOf="@id/torch" />
</androidx.constraintlayout.widget.ConstraintLayout>